<Page
    x:Class="Test1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="button" Content="1 Player" FontSize="50" Margin="0,250,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="100" Width="320" Click="button_Click"/>
        <Button x:Name="button2" Content="2 Players" FontSize="50" Margin="0,400,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="100" Width="320" Click="button2_Click"/>

    </Grid>
</Page>
